@model Minvu.Snat.Domain.Forms.ConsultaContrato

@{
    ViewBag.Title = "Solicitud Pago";
}
@{
    Layout = "~/Views/Shared/_LayoutImprimir.cshtml";
    var yearNow = @ViewBag.yearNow;
    var dateNow = @ViewBag.dateNow;
}
        
<style>
    .no-border {
        border: 0;
        box-shadow: none; /* You may want to include this as bootstrap applies these styles too */
    }
</style>

<div style="width:100%" >
    <div class="container" style="width:100%; height:50%">
        <div class="panel panel-info">
            <div class="panel-heading">
                <h2 class="panel-title">PRESUPUESTO REGIONAL</h2>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div style="display:inline">
                        <label class="control-label col-sm-4" style="text-align:left">
                            Año Presupuesto: @Html.TextBoxFor(model => model._contratoSolicitudPago.annoPresupuesto, new { @class = "form-control", @readonly = "readonly" })
                        </label>
                        <label class="control-label col-sm-4" style="text-align:left">
                            Número de Solicitud:
                            @Html.TextBoxFor(model => model._contratoSolicitudPago.numeroSolicitudPresupuesto, new { @class = "form-control", @readonly = "readonly" })
                        </label>
                    </div>
                </div>
                <div class="row">
                    <div style="display:inline">
                        <label class="control-label col-sm-4" style="text-align:left">
                            Presupuesto Disponible<span class="text-justify"> ($)</span>:
                            @Html.TextBox("pDisponible", Model._contratoSolicitudPago.montoPresupuesto.ToString("N0"), new { @class = "form-control", @readonly = "readonly" })
                        </label>
                        <label class="control-label col-sm-4" for="nRegionPresupuesto" style="text-align:left; width:300px" >
                            Región:
                            @Html.TextBoxFor(model => model._contratoSolicitudPago.nombreRegionPresupuesto, new { @class = "form-control", @readonly = "readonly" })
                        </label>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="panel panel-info">
            <div class="panel-heading">
                <h2 class="panel-title">CONTRATO / RESOLUCIÓN</h2>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div style="display:inline">
                        <label class="control-label col-sm-5" style="text-align:left">
                            N° Resolución Contrato:
                            @Html.TextBoxFor(model => model._contratoSolicitudPago.numeroResolucionContrato, new { @class = "form-control", placeholder = "Ingrese N° Resolución Contrato", maxlength = "8", id = "nresolucion", name = "nresolucion", onkeypress = "return numeros(event)", onpaste = "return false;", onCopy = "return false", onCut = "return false", onDrag = "return false", onDrop = "return false", @readonly = "readonly" })
                        </label>
                        <label class="control-label col-sm-5" style="text-align:left">
                            Fecha de Resolución Contrato:
                            @Html.TextBox("fresolucion", Model._contratoSolicitudPago.fechaResolucionContrato.ToString("dd-MM-yyyy"), new { @class = "form-control", placeholder = "", maxlength = "25", id = "fresolucion", name = "fresolucion", onpaste = "return false;", onCopy = "return false", onCut = "return false", onDrag = "return false", onDrop = "return false", @readonly = "readonly" })
                        </label>
                    </div>
                </div>
                <div class="row">
                    <div style="display:inline">

                        <label class="control-label col-sm-5" for="pejecucion" style="text-align:left">
                            Plazo Ejecución:
                            @Html.TextBoxFor(model => model._contratoSolicitudPago.plazoEjecucion, new { @class = "form-control", maxlength = "15", id = "pejecucion", name = "pejecucion", onpaste = "return false;", onCopy = "return false", onCut = "return false", onDrag = "return false", onDrop = "return false", @readonly = "readonly" })
                        </label>
                        <label class="control-label col-sm-5" style="text-align:left">
                            Fecha de Inicio Contrato:
                            @Html.TextBox("fcontrato", Model._contratoSolicitudPago.fechaInicioContrato.ToString("dd-MM-yyyy"), new { @class = "form-control", placeholder = "", maxlength = "25", id = "fcontrato", name = "fcontrato", onpaste = "return false;", onCopy = "return false", onCut = "return false", onDrag = "return false", onDrop = "return false", @readonly = "readonly" })
                        </label>
                    </div>
                    <div style="display:inline">
                        <label class="control-label col-sm-5" for="rut" style="text-align:left">
                            Rut:
                            @Html.TextBoxFor(model => model._contratoSolicitudPago.rutContrato, new { @class = "form-control", maxlength = "15", id = "rut", name = "rut", onpaste = "return false;", onCopy = "return false", onCut = "return false", onDrag = "return false", onDrop = "return false", @readonly = "readonly" })
                        </label>
                        <label class="control-label col-sm-5" for="nombre" style="text-align:left; width:400px">
                            Nombre / Razón Social:
                            @Html.TextBoxFor(model => model._contratoSolicitudPago.nombreRazonSocial, new { @class = "form-control", placeholder = "", maxlength = "25", id = "nombreRazonSocial", name = "nombreRazonSocial", onpaste = "return false;", onCopy = "return false", onCut = "return false", onDrag = "return false", onDrop = "return false", @readonly = "readonly" })
                        </label>
                    </div>
                    <div style="display:inline">
                        <label class="control-label col-sm-5" for="tipoProveedor" style="text-align:left">
                            Tipo Proveedor:
                            @Html.TextBoxFor(model => model._contratoSolicitudPago.nombreTipoProveedor, new { @class = "form-control", maxlength = "15", id = "tipoProveedor", name = "tipoProveedor", onpaste = "return false;", onCopy = "return false", onCut = "return false", onDrag = "return false", onDrop = "return false", @readonly = "readonly" })
                        </label>
                    </div>
                </div>
                <div class="row">
                    <div style="display:inline">
                        <label class="control-label col-sm-5" for="montoContrato" style="text-align:left">
                            Monto Contrato <span class="text-justify">($)</span>:
                            @Html.TextBox("montoContrato", Model._contratoSolicitudPago.montoContrato.ToString("N0"), new { @class = "form-control amt", id = "montoPresupuesto", name = "montoPresupuesto", onpaste = "return false;", onCopy = "return false", onCut = "return false", onDrag = "return false", onDrop = "return false", @readonly = "readonly" })
                        </label>
                        <label class="control-label col-sm-5" for="comprometidos" style="text-align:left">
                            Monto Contrato Comprometido <span class="text-justify">($)</span>:
                            @Html.TextBox("comprometidos", Model._contratoSolicitudPago.montoComprometidos.ToString("N0"), new { @class = "form-control amt", id = "comprometidos", name = "comprometidos", onpaste = "return false;", onCopy = "return false", onCut = "return false", onDrag = "return false", onDrop = "return false", @readonly = "readonly" })
                        </label>
                    </div>
                </div>
                <div class="row">
                    <div style="display:inline">
                        <label class="control-label col-sm-5" for="pagados" style="text-align:left">
                            Monto Contrato Pagado <span class="text-justify">($)</span>:
                            @Html.TextBox("pagados", Model._contratoSolicitudPago.montoPagados.ToString("N0"), new { @class = "form-control amt", id = "pagados", name = "pagados", onpaste = "return false;", onCopy = "return false", onCut = "return false", onDrag = "return false", onDrop = "return false", @readonly = "readonly" })
                        </label>

                        <label class="control-label col-sm-5" for="porPagar" style="text-align:left">
                            Monto Contrato por Pagar <span class="text-justify">($)</span>:
                            @Html.TextBox("montoPorPagar", Model._contratoSolicitudPago.montoPorPagar.ToString("N0"), new { @class = "form-control amt", id = "montoPorPagar", name = "montoPorPagar", onpaste = "return false;", onCopy = "return false", onCut = "return false", onDrag = "return false", onDrop = "return false", @readonly = "readonly" })
                        </label>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container" id="detallePresupuesto" style='display:block;'>
        <div class="panel panel-info">
            <div class="panel-heading">
                <h2 class="panel-title">ACTIVIDADES REALIZADAS</h2>
            </div>
            <div class="panel-body" id="detalleActividades">
                <table id="mytable" class="table table-bordered table-striped" style="width:100%">
                    <thead>
                        <tr>
                            <th>Tipo</th>
                            <th>Servicios</th>
                            <th>Monto a Pagar<br /><span class="text-justify">($)</span></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model._contratoSolicitudPagoList.Count > 0)
                        {
                            foreach (var items in Model._contratoSolicitudPagoList)
                            {
                                <tr>
                                <td style="text-align:center;">@items.nombreServicio</td>
                                <td style="text-align:center;">@items.nombreMaestroServicio</td>
                                <td style="text-align:center;">@items.montoAPagar.ToString("N0")</td>
                            </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="panel panel-info">
            <div class="panel-heading">
                <h2 class="panel-title">V°B° SERVICIOS</h2>
            </div>
            <div class="panel-body">

                <div class="row">
                    <div style="display:inline">
                        <label class="control-label col-sm-4" for="nbolfact" style="text-align:left; width:200px">
                            N° Boleta o Factura:
                            @Html.TextBoxFor(model => model._contratoSolicitudPago.numeroBolFact, new { @class = "form-control", placeholder = "", onkeypress = "return numeros(event)", maxlength = "15", id = "nbolfact", name = "nbolfact", onpaste = "return false;", onCopy = "return false", onCut = "return false", onDrag = "return false", onDrop = "return false", @readonly = "readonly" })                            
                        </label>
                        <label class="control-label col-sm-4" for="fbolfact" style="text-align:left">
                            Fecha Boleta o Factura:
                            @Html.TextBox("datepickerBolFact", Model._contratoSolicitudPago.fechaBolFact.ToString("dd-MM-yyyy"), new { @class = "form-control", placeholder = "", maxlength = "25", id = "datepickerBolFact", name = "datepickerBolFact", onpaste = "return false;", onCopy = "return false", onCut = "return false", onDrag = "return false", onDrop = "return false", @readonly = "readonly" })
                        </label>
                        <label class="control-label col-sm-4" for="montoTotalPagar" style="text-align:left">
                            Monto Total a Pagar<span class="text-justify"> ($)</span>:
                            @Html.TextBox("montoTotalPagar", Model._contratoSolicitudPago.montoTotalaPagar.ToString("N0"), new { @class = "form-control amt", id = "montoTotalPagar", name = "montoTotalPagar", onpaste = "return false;", onCopy = "return false", onCut = "return false", onDrag = "return false", onDrop = "return false", @readonly = "readonly" })
                        </label>
                        @*<label class="control-label col-sm-4" for="avance">
                            Avance:
                            <input type="text" class="form-control" name="avanceTotal" id="avanceTotal" value="" readonly="readonly" style="width:50%">
                        </label>*@
                    </div>
                   </div>

                <div class="row">
                    <div style="display:inline">
                        <label class="control-label col-sm-6" for="vbServicios" style="text-align:left; width:200px">
                            V°B° Servicio:
                            @Html.CheckBoxFor(Model => Model._contratoSolicitudPago.vbServicio, new { id = "vbServicios" }) <br />
                        </label>
                        <label class="control-label col-sm-6" for="vbFecha" style="text-align:left">
                            Fecha V°B°:
                            @Html.TextBoxFor(model => model._contratoSolicitudPago.fechaVB, new { @class = "form-control", placeholder = "", maxlength = "25", id = "vbFecha", name = "vbFecha", onpaste = "return false;", onCopy = "return false", onCut = "return false", onDrag = "return false", onDrop = "return false", @Value = dateNow, @readonly = "readonly" })
                        </label>
                        <label class="control-label col-sm-6" for="vbResponsable" style="text-align:left">
                            Responsable V°B°:
                            @Html.TextBoxFor(model => model._contratoSolicitudPago.responsableVB, new { @class = "form-control", placeholder = "", maxlength = "25", id = "vbResponsable", name = "vbResponsable", onpaste = "return false;", onCopy = "return false", onCut = "return false", onDrag = "return false", onDrop = "return false", @Value = @SiteHelper.UserName, @readonly = "readonly" })
                        </label>                       
                    </div>
                 </div>
            </div>
        </div>
    </div>
    <div>
        <br />
        <br />
        <br />
        <label style="text-align:center"> Firma Responsable</label>
</div>
</div>
